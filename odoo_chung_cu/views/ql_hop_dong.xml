<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Quản lý hợp đồng-->
        <record id="view_apartment_contract" model="ir.ui.view">
            <field name="name">Quản lý hợp đồng</field>
            <field name="model">quan.ly.chung.cu.hop.dong</field>
            <field name="arch" type="xml">
                <form string="Vehicle">
                    <header>
                        <button name="action_confirm" states="draft" type="object" string="Xác nhận" class="oe_highlight"/>
                        <button name="action_cancel" string="Hủy" type="object" states="confirm"/>
                        <field name="state"  widget="statusbar" statusbar_visible="draft,confirm,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" domain="[('customer', '=', True)]"/>
                                <field name="down_payment" />
                                <field name="power_start"/>
                            </group>
                            <group>
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="water_start"/>
                            </group>
                        </group>
                        <notebook position="inside">
                            <page string="Phòng cho thuê">
                                <field name="product_room">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="room_product" widget="selection"/>
                                        <field name="room_price"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Dịch vụ cơ bản">
                                <field name="product_base_service">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_base_service" widget="selection"/>
                                        <field name="product_base_service_price"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Sale Order" attrs="{'invisible': [('state', '=', 'draft')]}">
                                <field name="sale_id"/>
                            </page>
                            <page string="Tenant" attrs="{'invisible': [('state', '=', 'draft')]}">
                                <field name="tenant_ids">
                                    <tree string="Quản lý tenant" editable="bottom">
                                        <field name="partner_id"/>
                                        <field name="gui_xe"/>
                                        <field name="type" attrs="{'readonly': [('gui_xe', '=', False)]}"/>
                                        <field name="color" attrs="{'readonly': [('gui_xe', '=', False)]}"/>
                                        <field name="number" attrs="{'readonly': [('gui_xe', '=', False)]}"/>
                                        <field name="date_start" readonly="1"/>
                                        <field name="date_end" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_apartment_contract_tree">
            <field name="name">apartment.contract.tree</field>
            <field name="model">quan.ly.chung.cu.hop.dong</field>
            <field name="arch" type="xml">
                <tree string="Quản lý hợp đồng">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_apartment_contract_form">
            <field name="name">Quản lý hợp đồng</field>
            <field name="res_model">quan.ly.chung.cu.hop.dong</field>
            <field name="view_type">form</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_apartment_contract_tree" />
        </record>


        <menuitem id="menu_apartment_contract"
                  name="Quản lý hợp đồng"
                  sequence="1"
                  parent="odoo_chung_cu.menu_chungcu_conf"
                  action="action_apartment_contract_form"
                />
    </data>
</openerp>